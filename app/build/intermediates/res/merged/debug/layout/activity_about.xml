<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.jtournie.cml.tasitrack.AboutActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView android:text="@string/text_about_content" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:linksClickable="true"
            android:autoLink="email"/>


        <TextView android:text="@string/text_credits_ui" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/credits_ui"
            android:linksClickable="true"
            android:autoLink="email"/>

        <TextView android:text="@string/text_credits_content" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/credits"
            android:linksClickable="true"
            android:autoLink="email"/>

        <TextView android:text="@string/text_credits_content_lmcfrance" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/credits_lmcfrance"
            android:linksClickable="true"
            android:autoLink="email"/>

        <ImageView
            android:id="@+id/alarm_screen_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lmcfrance"
            android:layout_below="@+id/alarm_screen_name"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_weight="1"
            />

    </LinearLayout>


</RelativeLayout>
