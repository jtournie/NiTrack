<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_screen_main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/alarm_screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:text="@string/alarm_title"
        />

    <TextView
        android:id="@+id/alarm_screen_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/alarm_screen_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="38dp"
        android:text="Alarm name" />

    <TextView
        android:id="@+id/alarm_screen_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignLeft="@+id/alarm_screen_button"
        android:layout_below="@+id/alarm_screen_title"
        android:layout_marginTop="28dp"
        android:text="00 : 00"
        android:textSize="52dp"
        />



    <ImageView
        android:id="@+id/alarm_screen_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pill2"
        android:layout_below="@+id/alarm_screen_name"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/alarm_screen_ack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/alarm_ack_info" />

</LinearLayout>